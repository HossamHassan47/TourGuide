<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Image-->
            <ImageView
                android:id="@+id/image_view_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnail_height"
                android:scaleType="fitXY" />

            <!--Title-->
            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_title_background"
                android:paddingBottom="@dimen/txt_title_margin_vertical"
                android:paddingLeft="@dimen/txt_title_margin_horizontal"
                android:paddingRight="@dimen/txt_title_margin_horizontal"
                android:paddingTop="@dimen/txt_title_margin_vertical"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/txt_title_text_size"
                android:textAllCaps="true"/>

            <!--Description-->
            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_description_background"
                android:paddingBottom="@dimen/txt_title_margin_vertical"
                android:paddingLeft="@dimen/txt_title_margin_horizontal"
                android:paddingRight="@dimen/txt_title_margin_horizontal"
                android:paddingTop="@dimen/txt_title_margin_vertical"
                android:textSize="@dimen/txt_description_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_open_hours_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--Open Hours-->
                <ImageView
                    android:id="@+id/image_view_open_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_access_time" />

                <!--Open Hours-->
                <TextView
                    android:id="@+id/text_view_open_hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/txt_open_hours_text_size" />

                <!--Direction-->
                <ImageView
                    android:id="@+id/image_view_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_direction" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

